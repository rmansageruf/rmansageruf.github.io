{"components/cart/gift-certificates":"<div class=\"cart-totals-item gift-certificates\">\n  {{inject 'giftCertificateInputEmpty' (lang 'cart.gift_certificates.error')}}\n\n  <div data-gift-certificates>\n    <span class=\"cart-total-label\">{{lang 'cart.gift_certificates.gift_certificate'}}:</span>\n\n    <span class=\"link\" data-gift-certificate-toggle>{{lang 'cart.gift_certificates.add_code'}}</span>\n\n    <div class=\"modal-content-wrap\" id=\"certificate-modal\">\n      {{> components/common/modal-close}}\n      <header class=\"modal-header\">\n        <h2 class=\"title\">{{lang 'cart.gift_certificates.title'}}</h2>\n        <p class=\"subtitle\">{{lang 'cart.gift_certificates.subtitle'}}</p>\n      </header>\n      <form class=\"form form-gift-certificate\" method=\"post\" action=\"{{urls.cart}}\" data-gift-certificate-form>\n        <label class=\"sr-only form-label\" for=\"couponcode\">{{lang 'cart.gift_certificates.enter_code'}}</label>\n        <div class=\"input-group\">\n          <div class=\"form-field input-group-item\">\n            <input class=\"form-input\" id=\"couponcode\" type=\"text\" name=\"certcode\" value=\"\" placeholder=\"{{lang 'cart.gift_certificates.enter_code'}}\" data-gift-certificate-input>\n          </div>\n          <div class=\"form-field input-group-item\">\n            <button class=\"button button-tertiary button-progress spinner\" type=\"submit\">\n              <span class=\"button-text\">{{lang 'cart.gift_certificates.submit'}}<span class=\"button-text\">\n            </button>\n          </div>\n        </div>\n        <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n      </form>\n    </div>\n  </div>\n</div>\n","components/common/modal-close":"<a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'cart.modal_close'}}\">\n  <span aria-hidden=\"true\">\n    <svg class=\"icon icon-close\"><use xlink:href=\"#icon-close\" /></svg>\n  </span>\n</a>\n"}
