{"components/products/options/product-list":"<div class=\"form-field {{#if required }}required{{/if}}\" data-product-attribute=\"product-list\">\n  <label class=\"form-label-text product-option-title\">\n    {{display_name}}\n  </label>\n\n  {{#unless values.1.image}}\n\n    {{!-- same as radio buttons if no image set --}}\n    <div class=\"form-inline\">\n      {{#each values}}\n        <label class=\"form-label radio\" for=\"attribute_{{id}}_{{../id}}\">\n          <input type=\"radio\" class=\"form-input\" name=\"attribute[{{../id}}]\" id=\"attribute_{{id}}_{{../id}}\" value=\"{{id}}\" {{#if selected}}checked{{/if}}>\n          <span class=\"input-label\">{{label}}</span>\n        </label>\n      {{/each}}\n      <label class=\"form-label radio\" for=\"attribute_0_{{id}}\">\n        <input type=\"radio\" class=\"form-input\" name=\"attribute[{{id}}]\" value=\"0\" id=\"attribute_0_{{id}}\" {{#if defaultValue '==' 0}}checked{{/if}}>\n        <span class=\"input-label\">{{lang 'product.none'}}</span>\n      </label>\n    </div>\n\n  {{else}}\n\n    <ul class=\"product-picklist\">\n      {{#each values}}\n        <li class=\"product-picklist-item\">\n          <input class=\"product-picklist-radio\" type=\"radio\" name=\"attribute[{{../id}}]\" value=\"{{id}}\" id=\"attribute_{{id}}_{{../id}}\" {{#if selected}}checked{{/if}} {{#if ../required}}required{{/if}}>\n          <label class=\"product-picklist-block\" for=\"attribute_{{id}}_{{../id}}\">\n            {{#if image}}\n              <div class=\"product-picklist-image-container\">\n                <img class=\"product-picklist-image\" src=\"{{getImage image 'thumb'}}\" alt=\"{{image.alt}}\">\n              </div>\n            {{/if}}\n            <span class=\"product-picklist-label\">{{label}}</span>\n          </label>\n        </li>\n      {{/each}}\n      <li class=\"product-picklist-item\">\n        <input class=\"product-picklist-radio\" type=\"radio\" name=\"attribute[{{id}}]\" value=\"0\" id=\"attribute_0_{{id}}\" {{#if defaultValue '==' 0}}checked{{/if}} {{#if required}}required{{/if}}>\n        <label class=\"product-picklist-block picklist-none\" for=\"attribute_0_{{id}}\">\n          <span class=\"product-picklist-label\">{{lang 'product.none'}}</span>\n        </label>\n      </li>\n    </ul>\n\n  {{/unless}}\n</div>\n"}
