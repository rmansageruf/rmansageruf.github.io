{"components/products/options/swatch":"<div class=\"form-field swatch-group {{#if required }}required{{/if}}\" data-product-attribute=\"swatch\">\r\n  <div class=\"form-label-text product-option-title\">\r\n    {{display_name}}\r\n    <span class=\"swatch-value\"></span>\r\n  </div>\r\n\r\n  <div class=\"swatches\">\r\n    {{#each values}}\r\n      <label class=\"swatch-wrap\" data-swatch-value=\"{{label}}\" data-product-attribute-value=\"{{id}}\">\r\n        <span class=\"sr-only\">{{label}}</span>\r\n\r\n        <input type=\"radio\" class=\"swatch-radio\" name=\"attribute[{{../id}}]\" value=\"{{id}}\" {{#if selected}}checked{{/if}}>\r\n\r\n        <div class=\"swatch\">\r\n          <svg class=\"icon icon-check-mark\"><use xlink:href=\"#icon-check-mark\" /></svg>\r\n          {{#if pattern}}\r\n            <div class=\"swatch-color\" style=\"background-image: url('{{getImage image 'core-swatch'}}');\"></div>\r\n          {{/if}}\r\n\r\n          {{#if data.[0]}}\r\n            <div class=\"swatch-color\" style=\"background-color: #{{data.[0]}}\"></div>\r\n          {{/if}}\r\n\r\n          {{#if data.[1]}}\r\n            <div class=\"swatch-color secondary\" style=\"background-color: #{{data.[1]}}\"></div>\r\n          {{/if}}\r\n\r\n          {{#if data.[2]}}\r\n            <div class=\"swatch-color tertiary\" style=\"background-color: #{{data.[2]}}\"></div>\r\n          {{/if}}\r\n        </div>\r\n\r\n        {{#if pattern}}\r\n          <span class=\"swatch-pattern-expanded\">\r\n            <span class=\"swatch-pattern-image\" style=\"background-image: url('{{getImage image}}');\">\r\n                \r\n          </span>\r\n          {{label}}\r\n          </span>\r\n          \r\n        {{/if}}\r\n\r\n      </label>\r\n    {{/each}}\r\n  </div>\r\n</div>\r\n"}
