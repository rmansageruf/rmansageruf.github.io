{"components/common/modal-close":"<a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'cart.modal_close'}}\">\n  <span aria-hidden=\"true\">\n    <svg class=\"icon icon-close\"><use xlink:href=\"#icon-close\" /></svg>\n  </span>\n</a>\n","components/products/review-form":"<div class=\"review-form\">\r\n  {{> components/common/modal-close}}\r\n  <h2 class=\"review-form-heading\">{{lang 'product.reviews.write_review'}}</h2>\r\n  <form class=\"form\" id=\"form-leave-a-review\" action=\"{{urls.product.post_review}}\" method=\"post\" data-validated-form>\r\n    <!-- Name -->\r\n    <div class=\"form-field rating-name\">\r\n      <label class=\"form-label\" for=\"rating-name\">\r\n        <div class=\"form-label-text\">{{lang 'product.reviews.form.name'}}:</div>\r\n        <input id=\"rating-name\" class=\"form-input\" type=\"text\" placeholder=\"{{lang 'product.reviews.form.your_name'}}\" name=\"revfromname\" required>\r\n      </label>\r\n    </div>\r\n\r\n    <!-- Email -->\r\n    <div class=\"form-field rating-email\">\r\n      <label class=\"form-label\" for=\"rating-email\">\r\n        <div class=\"form-label-text\">{{lang 'product.reviews.form.email'}}:</div>\r\n        <input id=\"rating-email\" class=\"form-input\" type=\"email\" name=\"email\" placeholder=\"{{lang 'product.reviews.form.your_email'}}\" required>\r\n      </label>\r\n    </div>\r\n\r\n    <!-- Rating -->\r\n    <div class=\"form-field rating-number\">\r\n      <label class=\"form-label\" for=\"rating-stars\">\r\n        <div class=\"form-label-text\">{{lang 'product.reviews.form.rating_label'}}:</div>\r\n        <div class=\"rating-stars-wrap\">\r\n          <select class=\"form-input input-select rating-stars\" id=\"rating-stars\" name=\"revrating\">\r\n            {{#for 1 5}}\r\n              <option value=\"{{$index}}\" {{#if $index '===' 5}}selected{{/if}}>{{lang 'product.reviews.stars_count' NUM=$index}}</option>\r\n            {{/for}}\r\n          </select>\r\n          <div class=\"product-item-rating\">\r\n            <span class=\"rating-stars-label\">{{lang 'product.reviews.stars_count' NUM=5}}</span>\r\n            {{#for 1 5}}\r\n              <span class=\"icon-star-wrap full\">\r\n                <svg class=\"icon icon-star\"><use xlink:href=\"#icon-star\" /></svg>\r\n              </span>\r\n            {{/for}}\r\n            <svg class=\"icon icon-arrow-down\"><use xlink:href=\"#icon-arrow-down\" /></svg>\r\n          </div>\r\n        </div>\r\n      </label>\r\n    </div>\r\n\r\n    <!-- Review Subject -->\r\n    <div class=\"form-field rating-subject\">\r\n      <label class=\"form-label\" for=\"rating-title\">\r\n        <div class=\"form-label-text\">{{lang 'product.reviews.form.subject'}}:</div>\r\n        <input id=\"rating-title\" class=\"form-input\" type=\"text\" placeholder=\"{{lang 'product.reviews.form.your_subject'}}\" name=\"revtitle\" required>\r\n      </label>\r\n    </div>\r\n\r\n    <!-- Comments -->\r\n    <div class=\"form-field\">\r\n      <label class=\"form-label\" for=\"rating-comment\">\r\n        <div class=\"form-label-text\">{{lang 'product.reviews.form.comments'}}:</div>\r\n        <textarea id=\"rating-comment\" class=\"form-input\" name=\"revtext\" placeholder=\"{{lang 'product.reviews.form.your_comments'}}\" rows=\"4\" required></textarea>\r\n      </label>\r\n    </div>\r\n\r\n    {{{product.reviews.recaptcha.markup}}}\r\n\r\n    <input type=\"hidden\" name=\"product_id\" value=\"{{product.id}}\" />\r\n    <input type=\"hidden\" name=\"action\" value=\"post_review\" />\r\n    {{#if product.reviews.throttleToken}}\r\n      <input type=\"hidden\" name=\"throttleToken\" value=\"{{product.reviews.throttleToken}}\">\r\n    {{/if}}\r\n\r\n    <div class=\"form-submit-wrap\">\r\n      <input type=\"submit\" class=\"form-submit button button-primary button-wide\" value=\"{{lang 'product.reviews.form.submit'}}\">\r\n      <button class=\"button button-secondary\">{{lang 'product.reviews.form.cancel'}}</button>\r\n    </div>\r\n  </form>\r\n</div>\r\n"}
